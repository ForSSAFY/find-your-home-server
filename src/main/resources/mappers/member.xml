<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- dao와 namespace 맞추기 -->
<mapper namespace="com.ssafy.springtest.model.dao.MemberDao">

	<!-- 리턴하면서 column의 이름과 property 이름이 같지 않은 경우가 생김  -->
	<!-- column은 db, property는 dto -->
	<resultMap type="memberDto" id="basicMember">
		<result column="user_id" property="userId"/>
		<result column="user_name" property="userName"/>
		<result column="user_password" property="userPassword"/>
		<result column="address" property="address"/>
		<result column="phone" property="phone"/>
		<result column="join_date" property="joinDate"/>
		<result column="salt" property="salt"/>
	</resultMap>
	
	<select id="findMember" parameterType="String" resultMap="basicMember">
		select *
		from members
		where user_id = #{userId}
	</select>
	
	<select id="registerMember" parameterType="memberDto" >
		insert into members (user_id, user_name, user_password, address, phone, salt) 
		values (#{userId}, #{userName}, #{userPassword}, #{address}, #{phone}, #{salt})  
	</select>
	
	<select id="modifyMember" parameterType="memberDto" >
		update members 
		set user_name = #{userName}, user_password = #{userPassword}, address = #{address}, phone = #{phone} 
		where user_id = #{userId}
	</select>
	
	<select id="deleteMember" parameterType="String">
		delete from members 
		where user_id = #{userId} 
	</select>
</mapper>